{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "nodenext",
    "lib": [
      "es2017",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    // "typeRoots": [
    //   "**/*.d.ts",
    // ],
    "baseUrl": ".",
    "paths": {
      "/assert.js": [
        "./assert.ts",
        "./assert.d.ts"
      ]
    },
    "declaration": false,
    "allowJs": false,
    "checkJs": false,
  },
  "include": [
    // "**/*.d.ts",
    "**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    ".js",
    ".html",
    ".css"
  ]
}